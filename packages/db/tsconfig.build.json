{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "incremental": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",
    "emitDeclarationOnly": false,
    "declaration": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "noUnusedLocals": false
  },
  "exclude": ["src/**/__tests__/"]
}
