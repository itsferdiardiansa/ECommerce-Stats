generator client {
  provider = "prisma-client-js"
  engineType = "client"
  output = "./generated"
  adapter = "@prisma/adapter-pg"
}

datasource db {
  provider = "postgresql" 
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  createdAt DateTime @default(now())
  posts     Post[]
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  published Boolean  @default(false)
  authorId  Int
  author    User     @relation(fields: [authorId], references: [id])
}
